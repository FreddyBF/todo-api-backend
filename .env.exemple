# ▶️ Conexão com o banco de dados SQLite
DATABASE_URL="file:./dev.db"

# 🔐 Chave secreta para gerar e validar JWTs
JWT_SECRET="sua_chave_secreta_forte_aqui"

# 🌐 Porta que a aplicação vai usar
PORT=3000

# 🚦 Ambiente de execução (development, production, test)
NODE_ENV=development

# ⏳ Expiração do token JWT (opcional)
JWT_EXPIRES_IN=1d

# 📍 Host da aplicação (opcional para configurações futuras)
HOST=localhost
